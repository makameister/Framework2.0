{% extends 'layout.twig' %}


{% block body %}


  {% if flash('error') %}
    <div class="alert alert-danger">
      {{ flash('error') }}
    </div>
  {% endif %}

  <form action="{{ path('auth.login') }}" method="post">
    {{ csrf_input() }}
    {{ field('email', null, 'Adresse email') }}
    {{ field('password', null, 'Mot de passe', {type: 'password'}) }}
    <button class="btn btn-primary">Se connecter</button>
  </form>

{% endblock %}
