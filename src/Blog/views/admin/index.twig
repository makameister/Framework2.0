{% extends '@admin/layout.twig' %}

{% block title "Editer les articles" %}

{% block body %}
    <div class="container-fluid">
        <div class="row" style="margin-top: 30px;">
            <h1>Posts Administration</h1>
        </div>
        <p class="text-right"><a href="{{ path('blog.admin.create') }}" class="btn btn-primary">Ajouter un article</a></p>
        <table class="table table-striped">
            <thead>
                <tr>
                    <td>Titre</td>
                    <td>Actions</td>
                </tr>
            </thead>
            <tbody>
                {% for item in items %}
                    <tr>
                        <td>{{ item.name }}</td>
                        <td>
                            <a href="{{ path('blog.admin.edit', {id: item.id}) }}" class="btn btn-primary">Editer</a>
                            <form action="{{ path('blog.admin.delete', {id: item.id}) }}" method="POST" style="display: inline;" onsubmit="return confirm('Etes-vous sÃ»r ?')">
                                <input type="hidden" name="_method" value="DELETE">
                                <button class="btn btn-danger">Supprimer</button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <div class="mx-auto">
            {{  paginate(items, 'blog.admin.index') }}
        </div>
    </div>
{% endblock body %}