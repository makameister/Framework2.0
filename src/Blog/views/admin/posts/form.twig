{{ csrf_input() }}
<div class="row">
  <div class="col-md-4">
    {{ field('name', item.name, "Titre de l'article") }}
  </div>
  <div class="col-md-4">
    {{ field('category_id', item.categoryId, "Catégorie", {options: categories}) }}
  </div>
  <div class="col-md-4">
    {{ field('published', item.published, "En ligne ?", {type: 'checkbox'}) }}
  </div>
</div>
<div class="row">
  <div class="col-md-4">
    {% if item.image %}
      <img src="{{ item.getImageUrl }}" alt="" style="width:100%;">
    {% endif %}
  </div>
  <div class="col-md-4">
    <div class="row">
      {{ field('image', item.getImageUrl, "Image", {type: 'file'}) }}
    </div>
    <div class="row">
      {% if item.image %}
        <input type="text" name="fileUploaded" id="fileUploaded" class="form-control" style="width: 85%;" disabled value="{{ item.getImage }}">
      {% endif %}
    </div>
  </div>
  <div class="col-md-4">
    {{ field('slug', item.slug, "Lien") }}
  </div>
</div>
{{ field('content', item.content, "content", {type: 'textarea'}) }}
{{ field('created_at', item.createdAt, "Date de création", {class: 'datepicker'}) }}
