{% extends 'layout.twig' %}

{% block title post.name %}

{% block body %}
    <div class="container" style="margin-top: 50px;">
        <div class="row">
            <h1>{{ post.name }}</h1>
        </div>
        <div class="row">
            <a href="{{ path('blog.category', {slug: post.category_slug }) }}" title="{{ post.category_name }}">{{ post.category_name }}</a>&nbsp;
            <div class="text-muted">{{ post.created_at }}</div>
        </div>
        <div class="row">
            {{ post.content | nl2br }}
        </div>
    </div>
{% endblock body %}