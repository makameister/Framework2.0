{% extends 'layout.twig' %}

{% block title post.name %}

{% block body %}
    <div class="container" style="margin-top: 50px;">
        <div class="row">
            <h1>{{ post.name }}</h1>
        </div>
        <div class="row">
            <div class="text-muted">{{ post.created_at | ago }}</div>
        </div>
        <div class="row">
            {{ post.content | nl2br }}
        </div>
    </div>
{% endblock body %}